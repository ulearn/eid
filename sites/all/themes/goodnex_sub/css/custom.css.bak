.no-bullet { list-style: none; }

.title-1 {
  border: 1px solid #e2e2e2;
  padding: 20px 27px;
  margin: 20px 12.5px;
  color: #4e5257;
  position: relative;
  font-size: 1.385em;
  font-weight: bold;
  text-transform: uppercase;
}

.allcap{}

.title-1:before {
  content: '';
  position: absolute;
  left: -1px;
  top: -1px;
  bottom: -1px;
  width: 0;
  border-left: 4px solid #b6d82f;
}

.title-1:after {
  content: '';
  position: absolute;
  left: 0px;
  top: 20px;
  height: 0;
  width: 0;
  border: 10px solid transparent;
  border-left-color: #b6d82f;
}

